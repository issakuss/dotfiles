{
    // Editor
    "window.zoomLevel": 1,
    "workbench.startupEditor": "none",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": false, 
    "editor.lineNumbers": "relative",
    "editor.acceptSuggestionOnEnter": "off",
    "files.exclude":{"**/._**": true},
    "terminal.integrated.defaultProfile.linux": "/bin/bash",

    // Vim
    "vim.insertModeKeyBindings": [{"before": ["j","k"], "after": ["<Esc>"]}], 

    // Git
    "git.ignoreLegacyWarning": true,
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/external/**": true
      },
    "gitmoji.onlyUseCustomEmoji": true,
    "gitmoji.addCustomEmoji": [
        {"emoji": "🔬 feat:", "code": ":microscope: feat" , "description": "機能が変わった"},
        {"emoji": "🔬 fix:", "code": ":microscope: fix" , "description": "バグを直した"},
        {"emoji": "🔬 docs:", "code": ":microscope: docs" , "description": "ドキュメントのみ変わった"},
        {"emoji": "🔬 refactor:", "code": ":microscope: refactor" , "description": "リファクタリング"},
        {"emoji": "🔬 output:", "code": ":microscope: output" , "description": "図などアプトプットの見た目が変わった"},
        {"emoji": "🔬 params:", "code": ":microscope: output" , "description": "解析のパラメータが変わった"},
        {"emoji": "🔬 chore:", "code": ":microscope: chore" , "description": "ファイル名など開発環境が変わった"},

        {"emoji": "📝 content:", "code": ":memo: content" , "description": "論文内容を修正した"},
        {"emoji": "📝 prfread:", "code": ":memo: prfread" , "description": "他人による修正、修正への対応"},
        {"emoji": "📝 sturct:", "code": ":memo: struct" , "description": "レターなどファイルを追加した, 行を入れ替えた, セクション分けを変えた"},
        {"emoji": "📝 journal:", "code": ":memo: journal" , "description": "ジャーナル対応のための変更（レターのジャーナル名, セクション名）"},
        {"emoji": "📝 typo:", "code": ":memo: typo" , "description": "タイポや細かいミスを修正した"},
        {"emoji": "📝 chore:", "code": ":memo: chore" , "description": "執筆環境の変更, ファイルを出力した, フォーマットを調整した, 他"},
    ],

    // Python
    "[python]": {"editor.rulers": [79]},
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.terminal.executeInFileDir": true,
    "python.linting.pylintPath": "/usr/local/bin/pylint",

    // Markdown
    "[markdown]": {
        "files.trimTrailingWhitespace": false,
        "editor.renderWhitespace": "trailing",
        "files.insertFinalNewline": true,
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "jupyter.debugJustMyCode": false,
    "deepl.apiKey": "ff61e382-88b3-8b5e-45fd-d7404929b80e:fx",

    "japanese-proofreading.textlint.大かっこ［］": false,  // Not recognized as proper option, but works.
    "japanese-proofreading.textlint.全角文字と半角文字の間": false,
    "japanese-proofreading.textlint.全角文字どうし": false
    // Additional
}